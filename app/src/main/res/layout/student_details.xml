<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_8"
    android:paddingLeft="@dimen/margin_24"
    android:paddingRight="@dimen/margin_24">
    <TextView
        android:id="@+id/tvIdDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID: 123"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/tvNameDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: Tangwan elice"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/tvGenderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender: M"
        android:textSize="@dimen/text_size_12"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/tvClassDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class: Form 1A"
        android:textSize="@dimen/text_size_12"
        android:textAllCaps="true"/>
</LinearLayout>