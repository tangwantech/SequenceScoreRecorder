<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StudentDatabaseHomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_14"
        android:layout_marginEnd="@dimen/margin_14">
        <TextView
            android:id="@+id/tvSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvAcademicYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4">
            <Button
                android:id="@+id/btnClearDatabase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/value_50"
                android:layout_weight="0.6"
                android:text="@string/clear_database"
                android:textSize="@dimen/text_size_12"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnNewStudent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:text="@string/_new"
                android:layout_marginStart="@dimen/margin_4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_4"
                android:gravity="center_vertical"
                android:text="@string/sort_by" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSort"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_8">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteSort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnRefresh"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/value_50"
                android:text="@string/refresh"
                android:textSize="@dimen/text_size_12" />



        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/hDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDatabaseHeader"

                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="@dimen/headerHeight"
                android:gravity="center_vertical"
                android:text="All Students"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalNumberOfStudents"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="@dimen/headerHeight"
                android:gravity="end|center_vertical"
                android:layout_gravity="right"
                android:text="0"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </LinearLayout>


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/hDivider2"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:id="@+id/rvLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_12">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStudentDbHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvNoDataAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No data available"
            android:textSize="@dimen/text_size_20" />


    </LinearLayout>

</FrameLayout>